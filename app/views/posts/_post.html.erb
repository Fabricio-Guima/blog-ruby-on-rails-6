
<div class="card bg-light mb-3">
    <div class="card-body">
        <h4>
            <%= link_to post.title, post_path(post) %>
        </h4>
        <div class="text-muted mb-2">
            <em>Por <%= post.author%> (<%= l post.created_at, format: :short %>)</em>
        </div>
        <p>
            <%= post.body.truncate(50)%>
        </p>
        <p class="text-muted">
            <%= pluralize(post.comments.count, 'Comentário') %> 
        </p>

        <%= link_to "Ler Artigo", post, class: 'btn btn-primary' %>
        <%= link_to "Editar Artigo", edit_post_path(post), class: 'btn btn-warning' %>
        <%= link_to "Apagar Artigo", post, method: :delete, class: 'btn btn-danger',
        data: {confirm: 'Você tem certeza?'} %>
    </div>


</div>
