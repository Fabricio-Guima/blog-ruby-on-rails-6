<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
  <div class="bg-primary text-white text-center mb-4 p-4">
  <%= link_to root_path, class: 'text-white text-decoration-none' do %>
    <h1 class="display-4">Blog Teste</h1>   
  <% end %>
   <p class="lead">
    Texto lorem Texto lorem Texto lorem Texto lorem Texto lorem Texto lorem Texto lorem</p>
  </div>
  <div class="container">
   <% flash.each do |type, message| %>
        <div class='alert alert-<%= type == 'alert' ? 'danger' : 'success' %> alert-dismissible fade show' role='alert'>
          <%= message %>
           <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>  
    <%= yield %>  
  </div>
  

  <footer class="bg-primary text-white text-center mt-5 p-4">
  Copyright Blog rails <%= Date.current.year%>
  </footer>
  </body>
</html>
